@import "./../../app.wxss";

.show {
    display: flex;
    width: 650rpx;
    height: 160rpx;
    box-sizing: border-box;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.4);
    padding: 10rpx;
}

.show_border {
    width: 650rpx;
    margin: 0 auto;
    border-bottom: 1px solid #031034;
}

.file_img {
    width: 140rpx;
    height: 140rpx;
    box-sizing: border-box;
    padding: 10rpx;
    border: 1px solid #031034;
    background: #ccc;
}

.file_img_bg {
    width: 120rpx;
    height: 120rpx;
    background: #fff;
}

.file_img_image {
    position: relative;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.file_right {
    width: 490rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
}

.file_name {
    width: 460rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.file_info {
    display: flex;
    width: 460rpx;
    height: 90rpx;
}

.file_info_left{
    width: 260rpx;
    height: 90rpx;
}

.file_info_left_edit{
    width: 210rpx;
    height: 90rpx;
}

.file_text {
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    color: #fff;
    font-size: 24rpx;
}

.file_info_right_bt{
    width: 100rpx;
    height: 90rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #97adca;
    border: 1px solid #031034;
    background: linear-gradient(180deg, #04133c, #010928);
}

/* 你光标经过某一元素时的样式 */
.file_info_right_bt>button:hover {
    border: 1px solid #031034;
    background: linear-gradient(180deg, #04133c, #010928);
}

/* 按钮按下去的样式 */
.file_info_right_bt>button.button-hover {
    border: 1px solid #031034;
    background: linear-gradient(180deg, #04133c, #010928);
}

/* 点击状态 */
.file_info_right_bt>button:active {
    border: 1px solid #031034;
    background: linear-gradient(180deg, #04133c, #010928);
}

.file_info_right_bt>i{
    width: 50rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 45rpx;
    color: #97adca;
}

/* ---------------------------------------------------- */
.edit {
    display: flex;
    width: 650rpx;
    height: 160rpx;
    box-sizing: border-box;
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.4);
    padding: 10rpx;
}

.edit_border {
    width: 710rpx;
    margin: 0 auto;
    border-bottom: 1px dotted #ccc;
}

.edit_name {
    display: block;
    width: 460rpx;
    height: 50rpx;
    color: #fff;
    padding: 5rpx;
    box-sizing: border-box;
    line-height: 46rpx;
    font-size: 28rpx;
    font-weight: bold;
    border: 1px solid #9b9b9d;
    background: #202435;
}

.edit_name_warning {
    border: 1px solid #FF0000;
}
