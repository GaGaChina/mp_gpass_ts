/* 获取焦点时的样式 */
.bt_clear:focus {
    background: none;
}
/* 你光标经过某一元素时的样式 */
.bt_clear:hover {
    background: none;
}
/* 按钮按下去的样式 */
.bt_clear.button-hover {
    background: none;
}
/* 点击状态 */
.bt_clear:active {
    background: none;
}



.hide_flex {
    display: none;
}

.show_flex {
    display: flex;
}

.hide_block {
    display: none;
}

.show_block {
    display: block;
}

.show {
    visibility: visible;
}

.hide {
    visibility: hidden;
}