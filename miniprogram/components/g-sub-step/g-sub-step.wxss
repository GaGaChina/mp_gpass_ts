@import "./../../fonts/awesome.wxss";

.root {
    position: fixed;
    width: 750rpx;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(0, 0, 0, 0.8);
}

/* ------------------------------------------完成的队列 */
.finish {
    display: flex;
    width: 750rpx;
    flex-direction: column;
    justify-content: flex-end;
}

.finish_item {
    display: flex;
    width: 590rpx;
    height: 60rpx;
    margin: 0 auto;
}

.finish_icon {
    width: 60rpx;
    height: 60rpx;
}

.finish_icon>i {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 50rpx;
    color: #9ce72a;
    border-radius: 50%;
}

.finish_title {
    width: 530rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 45rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

